@model IEnumerable<JustinGomezcoello_TallerModelos.Models.Jugador>

@{
    ViewData["Title"] = "Index";
}
<body class="page3">
<h1 style="color:mediumpurple">Jugadores</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>

      
</p>

<!-- Formulario para filtrar jugadores por equipo -->
    <form method="get">
        <div class="form-group">
            <label for="equipoId">Filtrar por equipo</label>
            <select name="equipoId" class="form-control">
                <option value="">Todos los equipos</option>
                @foreach (var equipo in ViewBag.Equipos)
                {
                    <option value="@equipo.Value">@equipo.Text</option>
                }
            </select>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </form>




<div class="page-container">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipo.Nombre)
            </td>
            <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>



